<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgmenu"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout_menu"
                        android:layout_width="409dp"
                        android:layout_height="402dp"
                        android:layout_marginTop="148dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout_promotion">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button_coffe"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="onButtonClick"
                                android:text="@string/main_menu_drinks"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:visibility="visible"
                                app:cornerRadius="0dp" />

                            <ImageView
                                android:id="@+id/Image_coffe"
                                android:layout_width="109dp"
                                android:layout_height="89dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/imagecoffee" />


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button_eat"
                                android:layout_width="387dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="onButtonClick"
                                android:text="@string/main_menu_food"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:visibility="visible"
                                app:cornerRadius="0dp" />

                            <ImageView
                                android:id="@+id/image_food"
                                android:layout_width="110dp"
                                android:layout_height="91dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/imagefood"
                                android:visibility="visible" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button_coffe_at_home"
                                android:layout_width="393dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="onButtonClick"
                                android:text="@string/main_menu_atHomeCoffee"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:visibility="visible"
                                app:cornerRadius="0dp" />

                            <ImageView
                                android:id="@+id/Image_atHomeCoffe"
                                android:layout_width="110dp"
                                android:layout_height="91dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/imagecoffeeathome"
                                android:visibility="visible" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button_merchendise"
                                android:layout_width="387dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="onButtonClick"
                                android:text="@string/main_menu_merchendise"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:visibility="visible"
                                app:cornerRadius="0dp" />

                            <ImageView
                                android:id="@+id/Image_merchendise"
                                android:layout_width="110dp"
                                android:layout_height="90dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/imagemerchndise"
                                android:visibility="visible" />
                        </FrameLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout_promotion"
                        android:layout_width="412dp"
                        android:layout_height="617dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="110dp"
            android:background="@color/endpanel_main"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/ImageButtonHome"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@color/endpanel_main"
                android:contentDescription="@string/app_name"
                android:onClick="onButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/home"
                tools:src="@drawable/home"
                tools:srcCompat="@drawable/home" />

            <ImageButton
                android:id="@+id/image_button_bascet"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@color/endpanel_main"
                android:contentDescription="@string/app_name"
                android:onClick="onButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/backet"
                tools:ignore="SpeakableTextPresentCheck" />


            <ImageButton
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@color/endpanel_main"
                android:contentDescription="@string/app_name"
                android:onClick="logout"
                android:scaleType="fitCenter"
                android:src="@drawable/imageenter"
                tools:src="@drawable/imageenter"
                tools:srcCompat="@drawable/imageenter" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageButton_promotion"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_weight="200"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>